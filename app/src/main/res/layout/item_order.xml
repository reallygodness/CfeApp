<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/itemOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заказ #123"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#212121"/>

    <TextView
        android:id="@+id/itemOrderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26.04.2025 18:32"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginTop="2dp"/>

    <!-- Горизонтальный контейнер для статуса и суммы -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <!-- Статус займает всё доступное пространство -->
        <TextView
            android:id="@+id/itemOrderStatus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="В готовке"
            android:textSize="14sp"
            android:textColor="#2F4B4E"/>

        <!-- Сумма по заказу по правому краю -->
        <TextView
            android:id="@+id/itemOrderTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="450 ₽"
            android:textSize="14sp"
            android:textColor="#2F4B4E"/>
    </LinearLayout>
</LinearLayout>
