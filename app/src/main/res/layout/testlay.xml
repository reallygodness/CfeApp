<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Заголовок -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Профиль"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/fontregular"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Фото профиля -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/grayprofile"
            android:layout_marginBottom="16dp"/>

        <!-- Имя пользователя -->
        <TextView
            android:id="@+id/firstNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allison"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/fontregular"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>

        <!-- Username -->
        <TextView
            android:id="@+id/lastNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="allisonw2043"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="4dp"/>

        <!-- Email -->
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="allison@gmail.com"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="4dp"/>

        <!-- Телефон -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="415-333-9090"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="16dp"/>

        <!-- Кнопка "Edit Profile" -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Редактировать"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/fontregular"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:background="@drawable/button_rounded"
            android:layout_marginBottom="8dp"/>

        <!-- Кнопка "Logout" -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Выйти"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/fontregular"
            android:background="@drawable/button_rounded_gray"
            android:textColor="@color/black"
            app:backgroundTint="@null"/>

    </LinearLayout>
</ScrollView>
